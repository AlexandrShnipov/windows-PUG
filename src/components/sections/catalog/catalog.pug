section.catalog-home
	.modal
		.modal__content
			.modal__content-buttons
				button.button--size.focus Ввести размер
				button.button--call Вызвать замерщика
				button.button--closed
					img.button--closed-img(src="./wp-content/themes/factory_windows/assets/img/icons/filter-closed.png", alt="Закрыть", aria-label="Закрыть фильтр")
			.modal__content--size.modal__content-items
				form
					input.modal__content-item(type='text' placeholder='Высота')
					input.modal__content-item(type='text' placeholder='Ширина')
					.__select.modal__content-item(data-state="")
						.__select__title(data-default="Option 0") Профиль
						.__select__content
							input(id="singleSelect0" class="__select__input" type="radio" name="singleSelect" checked)
							label(for="singleSelect0" class="__select__label") Option 0
							input(id="singleSelect3" class="__select__input" type="radio" name="singleSelect")
							label(for="singleSelect3" class="__select__label") 60мм
							input(id="singleSelect4" class="__select__input" type="radio" name="singleSelect")
							label(for="singleSelect4" class="__select__label") 80мм
					.__selectTwo.modal__content-item(data-state="")
						.__select__titleTwo(data-default="Option 0") Цвет
						.__select__contentTwo
							input(id="singleSelect0" class="__select__inputTwo" type="radio" name="singleSelect" checked)
							label(for="singleSelect0" class="__select__labelTwo") Option 0
							input(id="singleSelect1" class="__select__inputTwo" type="radio" name="singleSelect")
							label(for="singleSelect1" class="__select__labelTwo") Белый
							input(id="singleSelect2" class="__select__inputTwo" type="radio" name="singleSelect")
							label(for="singleSelect2" class="__select__labelTwo") Дерево
					button.button-form(type='submit') Отправить 
			.modal__content--call.modal__item
